extend layout

block login
	form(class="signin-form form-wrapper")
		input#signin(type="radio" name="action" value="signin" checked)
		label(for="signin").
			登陆
		input#signup(type="radio" name="action" value="signup")
		label(for="signup").
			注册
		div.login-wrapper#login-wrapper
			div.arrow-up
			p.error-message
			input.username(type="text" placeholder="请输入昵称")
			input.password(type="password" placeholder="请输入密码")
			input.repassword(type="password" placeholder="请再次输入密码")
		button(type="submit")
			span.submit.
				登陆
				<br />
				注册